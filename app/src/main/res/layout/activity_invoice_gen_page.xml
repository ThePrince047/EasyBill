<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".invoice_gen_page"
    android:background="#3CB4F0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoice Generator"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <ListView
        android:id="@+id/lvAddedItems"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@id/viewTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/viewTotal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="25dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblGrandTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTotalAmount"
                android:layout_marginTop="87dp"
                android:layout_marginStart="10dp"
                android:text="Grand Total :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTotalAmount"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:text="Tax :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lblTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Sub Total :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/lblDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblTotalAmount"
                android:layout_marginTop="47dp"
                android:layout_marginStart="10dp"
                android:text="Discount :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="0.00"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTotalAmount"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="17dp"
                android:textColor="@color/black"
                android:text="0.00" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTotalAmount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="47dp"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:text="0.00" />

            <TextView
                android:id="@+id/tvGrandTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTotalAmount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="87dp"
                android:layout_marginEnd="20dp"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Items"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/ThemeColor"
            android:textColor="@color/white"
            android:id="@+id/btnAddItems"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_add_white"
            android:textSize="15dp"
            />
</RelativeLayout>
