<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F8F8F8">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/ThemeColor"
        android:id="@+id/homeview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:id="@+id/lblHello"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:textColor="#84857F"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/lblHello"
        android:id="@+id/lblUser"
        android:layout_marginStart="65dp"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="25dp">
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:src="@drawable/user"
            android:background="@color/white"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/homeamt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="â‚¹Loading.."
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/homeamt"
        android:text="Total Balance"
        android:textSize="15dp"
        android:textColor="#84857F"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="22dp"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/homeview"
        android:id="@+id/homeinvoicelist"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:id="@+id/bottomnv"
        >

        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Income"
            android:drawableLeft="@drawable/icninc"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:id="@+id/lblIncome"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_marginStart="200dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/icnexp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="15dp"
            android:text="Expense"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>




</RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>