<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicy"
    android:background="@color/Background">

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/title_privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:fontFamily="@font/helveticaneueblack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- Privacy Policy Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_privacy_policy">

        <TextView
            android:id="@+id/text_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/helveticaneueroman"
            android:lineSpacingExtra="4dp"
            android:text="@string/privacy_policy_text" />
    </ScrollView>
</RelativeLayout>