<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0043F1"
    tools:context=".register1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:backgroundTint="#EAEAEA"
        android:background="@drawable/shape1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#002C58"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Create you an account"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexa_font3"
            android:textColor="#002C90"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_with_facebook"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:drawableLeft="@drawable/facebook1"
            app:backgroundTint="#FFFFFF"
            android:background="@drawable/shape3"
            android:text="Sign Up with Facebook"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_with_google"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/google"
            app:backgroundTint="#FFFFFF"
            android:background="@drawable/shape3"
            android:text="Sign Up with Google"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#808080"
            />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_txt3"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >


            <EditText
                android:id="@+id/signup_Email_or_phno"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:paddingStart="15dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:ems="15"
                android:layout_gravity="center"
                android:hint="Email Id"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/shape2"
                />


            <EditText
                android:id="@+id/signup_Pass"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:paddingStart="15dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:ems="15"
                android:layout_gravity="center"
                android:hint="Password"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/shape2"
                />

            <EditText
                android:id="@+id/signup_con_Pass"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:paddingStart="15dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:ems="15"
                android:layout_gravity="center"
                android:hint="Confirm Password"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:background="@drawable/shape2"

                />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_btn"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="65dp"
            android:text="Sign Up"
            android:textSize="25dp"
            android:fontFamily="@font/nexa_font3"
            android:background="@drawable/shape3"
            app:backgroundTint="#002C58"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account ?"
                android:textSize="18dp"
                android:textColor="#002C90"
                android:fontFamily="@font/nexa_font3"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/signin_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/nexa_font3"
                android:gravity="center"
                android:text="( Sign in )"
                android:textColor="#002C58"
                android:textSize="20dp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>