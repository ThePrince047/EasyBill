<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Page"
    android:background="@color/Background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textColor="@color/black"
        android:id="@+id/lblRegister"
        android:fontFamily="@font/helveticaneueblack"
        android:textSize="30dp"
        android:layout_marginTop="80dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardEmail"
        app:cardBackgroundColor="@color/white"
        android:layout_below="@id/lblRegister"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <EditText
            android:id="@+id/edtLoginEmail"
            android:layout_width="match_parent"
            android:textColorHint="#61000000"

            android:layout_height="40dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:hint="Email address"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardPass"
        app:cardBackgroundColor="@color/white"
        android:layout_below="@id/cardEmail"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="#61000000"
                android:background="@color/white"

                android:hint="Password"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/linePass"
                app:dividerColor="#57808080"
                android:layout_below="@id/edtPass"
                />
            <EditText
                android:id="@+id/edtConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/linePass"
                android:textColor="@color/black"
                android:textColorHint="#61000000"
                android:background="@color/white"
                android:hint="Confirm Password"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPass"
        android:id="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/helveticaneueroman"
        android:layout_marginTop="20dp"
        app:cornerRadius="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/ThemeColor"
        android:text="Register"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or Sign up with"
        android:layout_below="@id/btnRegister"
        android:id="@+id/lblOrSignUpWith"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/helveticaneueroman"
        android:textColor="#C8000000"/>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/lblOrSignUpWith"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/white">
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icngoogle"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="@color/white"
            >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icnfacebook"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/white"
            >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icnmicrosoft"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/lblAlreadyHaveAcc"
            android:textColor="#C8000000"
            android:textStyle="bold"
            android:text="Already have an account? "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/lblLogin"
            android:textStyle="bold"
            android:fontFamily="@font/helveticaneueroman"
            android:textColor="@color/ThemeColor"
            android:layout_toRightOf="@id/lblDonthaveacc"
            android:text="Login"/>
    </LinearLayout>
</RelativeLayout>