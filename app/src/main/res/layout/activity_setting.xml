<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting"
    android:background="@color/Background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Setting"
            android:textColor="@color/black"
            android:id="@+id/lblYourCompanyInfo"
            android:fontFamily="@font/helveticaneueblack"
            android:textSize="28dp"
            android:layout_marginTop="40dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="18dp"
            android:elevation="10dp"
            android:layout_marginBottom="-20dp"
            android:id="@+id/cardSetting"
            app:cardBackgroundColor="@color/white"
            android:layout_below="@id/lblYourCompanyInfo"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="10dp"
                    android:id="@+id/cardEditCompanyInfo"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/tvEditCompanyInfo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    android:textSize="15dp"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/helveticaneueroman"
                    android:text="Edit Comapany Info"
                    />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:id="@+id/cardPrivacyPolicy"
                    android:layout_below="@+id/cardEditCompanyInfo"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/tvPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:textSize="15dp"
                        android:paddingStart="10dp"
                        android:paddingTop="9dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/helveticaneueroman"
                        android:text="Privacy Policy"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="10dp"
                    android:id="@+id/cardAboutUs"
                    android:layout_below="@+id/cardPrivacyPolicy"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/tvAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:textSize="15dp"
                        android:paddingStart="10dp"
                        android:paddingTop="9dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/helveticaneueroman"
                        android:text="About Us"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_below="@+id/cardAboutUs"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:elevation="10dp"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/tvFAQ"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:textSize="15dp"
                        android:paddingStart="10dp"
                        android:paddingTop="9dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/helveticaneueroman"
                        android:text="FAQ"
                        />
                </androidx.cardview.widget.CardView>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:id="@+id/btnLogOut"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/helveticaneueroman"
                    android:layout_marginTop="20dp"
                    app:cornerRadius="8dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="@color/ThemeColor"
                    android:text="Log Out"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="App Version 1.0"
                    android:fontFamily="@font/helveticaneueroman"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:textColor="#61000000"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
