<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvInvoiceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneueroman"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Loading Item Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"

        />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneueroman"
            android:layout_below="@+id/tvInvoiceNumber"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="Customer Name"
            android:textColor="#808080"
            android:textSize="12dp"

        />


        <TextView
            android:id="@+id/tvGrandTotal"
            android:layout_width="wrap_content"
            android:fontFamily="@font/helveticaneueblack"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvStatusPaid"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="18dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
        />
        <TextView
            android:id="@+id/tvStatusPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="22dp"
            android:text="Paid"
            android:textColor="#8BC34A"
            android:fontFamily="@font/helveticaneueroman"
            android:textSize="13dp"
            android:textStyle="bold"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="10dp"
            android:background="#57808080" />

    </RelativeLayout>


</RelativeLayout>
