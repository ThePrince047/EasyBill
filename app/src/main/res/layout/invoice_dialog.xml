<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ThemeColor"
    android:padding="16dp">

        <EditText
            android:id="@+id/editDialogItemName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/border"
            android:padding="15dp"
            android:hint="Item Name"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editDialogQuantity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:hint="Quantity"
            android:inputType="number"
            android:layout_below="@id/editDialogItemName"
            />

        <EditText
            android:id="@+id/editDialogAmount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:layout_below="@id/editDialogQuantity" />

    <EditText
        android:id="@+id/editDialogTax"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:hint="Tax"
        android:inputType="numberDecimal"
        android:layout_below="@id/editDialogAmount" />
    </RelativeLayout>
