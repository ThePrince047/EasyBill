<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EasyBill" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.EasyBill" parent="Base.Theme.EasyBill" />

    <!-- Custom style for rounded ImageView -->
    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Custom ThemeOverlay for MaterialAlertDialog -->
    <style name="ThemeOverlay.MaterialComponents.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize the background color and text color for the dialog -->
        <item name="android:background">@color/Background</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Set the custom title text style -->
        <item name="titleTextStyle">@style/CustomAlertDialogTitleText</item>
    </style>

    <!-- Custom text style for the dialog title -->
    <style name="CustomAlertDialogTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item> <!-- Change this to your desired color -->
    </style>

    <!-- Custom AlertDialog Theme -->
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
    </style>

    <!-- Custom AlertDialog Style -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#000000</item> <!-- This sets the title color to black -->
    </style>
</resources>
